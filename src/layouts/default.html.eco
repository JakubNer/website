<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= @document.title %></title>
  <meta content='width=device-width, minimum-scale=1.0, maximum-scale=1.0' name='viewport'>
  <!--[if IE]>
    <script src="https://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  <%- @getBlock("meta").toHTML() %>
  <%- @getBlock("styles").add(["/styles/style.css"]).toHTML() %>
</head>
<body>
  <!-- COMMON TOPNAV USED ON ALL RS SITES -->
  <div id="rs-common-nav">
    <h1>
      <a href="https://remotestorage.io">
        <img src="/img/icon.svg" alt="RemoteStorage">
      </a>
    </h1>
    <nav class="primary">
      <ul>
        <li><a href="#">Get Storage</a></li>
        <li><a href="https://wiki.remotestorage.io/Apps">Apps</a></li>
        <li><a href="#">Develop</a></li>
        <li><a href="http://tools.ietf.org/html/draft-dejong-remotestorage-04">Spec</a></li>
      </ul>
    </nav>
    <nav class="secondary">
      <ul>
        <li><a href="https://wiki.remotestorage.io">Wiki</a></li>
        <li><a href="https://github.com/remotestorage">GitHub</a></li>
        <li><a href="https://community.remotestorage.io">Forums</a></li>
        <li><a href="#">Chat</a></li>
        <li><a href="https://twitter.com/remotestorage_">Twitter</a></li>
      </ul>
    </nav>
  </div>
  <!-- END TOPNAV -->
  <main>
    <%- @content %>
  </main>
  <%- @getBlock("scripts").toHTML() %>
</body>
</html>
